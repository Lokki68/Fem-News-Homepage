---
import type {ArticleType} from "./Aside.astro";
type Props = {
  article: ArticleType
  border: boolean
}

const { article, border }: Props = Astro.props
const { title, content} = article
---

<div class={`article-content ${border && 'border'}`} >
  <h4>{title}</h4>
  <p>{content}</p>
</div>

<style lang='scss' >
  .article-content {
    color: white;
    padding: 15px 0;

    &.border {
      border-top: 1px solid var(--grayish-blue);
      border-bottom: 1px solid var(--grayish-blue);
    }

    h4 {
      font-size: 19px;
    }

    p {
      margin-top: 1rem;
      color: var(--grayish-blue);
      line-height: 1.5rem;
    }
  }
</style>