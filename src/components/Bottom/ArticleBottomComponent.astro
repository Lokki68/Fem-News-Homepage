---
  import type {BottomArticle} from './Bottom.astro'

  type Props = {
    article: BottomArticle
  }

  const { article }: Props = Astro.props
  const { id, title, content, img } = article


---

<div class='article-container' >
  <img
    src={`assets/images/${img}`}
    alt={title}
    class='article-img'
  />
  <div class='content'>
    <p class='content__index' >{id}</p>
    <h4 class='content__title' >
      {title}
    </h4>
    <p class='content__text'>
      {content}
    </p>
  </div>
</div>

<style lang='scss' >
  .article-container {
    display: flex;
    gap: 15px;

    .content {

      &__index {
        font-size: 32px;
        font-weight: var(--fw3);
        color: var(--grayish-blue)
      }

      &__title {
        font-size: 20px;
        margin-bottom: 1rem;
      }

      &__text {
        font-size: 16px;

      }

    }

  }

  img.article-img {
    height: 100%;
    width: 80px;
    object-fit: cover;
  }
</style>
