---
  import { Icon } from 'astro-icon/components'
  import Logo from "./Logo.astro";


---

<div class='navbar'>
  <Logo />

  <nav class='navigation' >
    <ul>
	    <li class='nav-item' >Home</li>
	    <li class='nav-item' >New</li>
	    <li class='nav-item' >Popular</li>
	    <li class='nav-item' >Trending</li>
	    <li class='nav-item' >Categories</li>
    </ul>
  </nav>
  <button class='hamburger-btn '>
	  <Icon name='icon-menu' size={40} class='menu' />
	  <Icon name='icon-menu-close' size={40} class='close' />
  </button>
  <div class="mobile-navigation-container ">
    <nav class='mobile-navigation' >
      <a href='#' class='nav-item' >Home</a >
      <a href='#' class='nav-item' >New</a >
      <a href='#' class='nav-item' >Popular</a >
      <a href='#' class='nav-item' >Trending</a >
      <a href='#' class='nav-item' >Categories</a >
    </nav>
  </div>
</div>

<style lang='scss' >
  .navbar {
    display: flex;
    justify-content: space-between;
  }

  .navigation {
    display: none;

    @media (min-width: 768px) {
      display: flex;
    }
  }

  .hamburger-btn {
    border: none;
    background: transparent;
    cursor: pointer;
    z-index: 2;

    .menu, .close {
      transition: all .4s ease-in;
    }

    .close {
      display: none;
    }

    &.show > .menu {
      display: none;
    }

    &.show > .close {
      display: block;
    }

    @media (min-width: 768px) {
      display: none;
    }
  }

  .mobile-navigation-container {
    position: fixed;
    width: 100%;
    height: 100vh;
    top: 0;
    bottom: 0;
    right: 0;
    display: none;

    &::before {
      position: absolute;
      content: '';
      width: 100%;
      height: 100%;
      opacity: .6;
      background-color: #000;
    }

    &.show {
      display: block;
    }

    & .mobile-navigation {
      position: absolute;
      top: 0;
      bottom: 0;
      right: 0;
      width: 70%;
      background: var(--off-white);

      display: flex;
      flex-direction: column;
      padding: 200px 30px;
      gap: 20px;
    }
  }

  .nav-item {
    font-size: 18px;
    cursor: pointer;
    transition: var(--transition);

    &:hover {
      color: var(--soft-red);
    }
  }
</style>

<script>
  const hbgBtn = document.querySelector('.hamburger-btn')
  const mobileNavigationContainer = document.querySelector('.mobile-navigation-container')

  hbgBtn.addEventListener('click', () => {
    hbgBtn.classList.toggle('show')
    mobileNavigationContainer.classList.toggle('show')
  })
</script>